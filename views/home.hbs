{{#if isLogged}}

<section class="actions">
    <form action="/refill/amount" method="POST">
        <h2>Salary time? Refill your account amount.</h2>
        <input type="text" name="newAmount" id="refill-amount">
        <button type="submit">Refill</button>
    </form>
    <div>
        <h2>New expense comming up?</h2>
        <a href="/expense/add">Add it now</a>
    </div>
</section>

<hr class="separator">

<table class="expenses">

    {{#if expenses}}
    <thead>
        <tr>
            <th>Date</th>
            <th>Merchant</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
        </tr>

    </thead>
    <tbody>
        {{/if}}

        {{#each expenses}}

        <tr>
            <td>
                <img src="static/images/date.png" />
                <p>{{date}}</p>
            </td>
            <td>
                {{#if report}}
                <a href="/report/{{_id}}">
                    <button for="report" class="report">Report</button>
                </a>
                {{/if}}
                <p>{{merchant}}</p>
            </td>
            <td>
                <img src="static/images/amount.png" alt="">
                <p>лв {{total}}</p>
            </td>
            <td>
                <img src="static/images/category.png" alt="">
                <p>{{category}}</p>
            </td>
            <td>
                <img src="static/images/hastag.png" alt="">
                <p>{{description}}</p>
            </td>
        </tr>

        {{else}}

        </br>
        </br>
        </br>
        </br>
        <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>

        {{/each}}
    </tbody>
</table>

{{else}}
<p class="guest-message">MoneyGone? The best expense tracker tool of all time!<br>Аre you new here? <a
        href="/register">Register</a> yourself!</p>
{{/if}}